<fieldset>
    <legend>Mouse</legend>
    {{> text_input id='idx' description='ID' placeholder='1234'}}
    {{> text_input id='ear-tag' description='Ear tag' placeholder='1234'}}
    {{> text_input id='breeder-id' description='Breeder ID' placeholder='1234'}}
    {{> text_input id='cage-id' description='Cage ID' placeholder='1234'}}

    {{> date_input id='date-of-birth' description='D.O.B.'}}
    <div class="form-group col-md-6">
        <label class="col-md-3 control-label">Sex</label>
        <div class="col-md-9">
            <div class="radio radio-inline">
                <label>
                    <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                    <i class="fa fa-mars fa-2x" aria-hidden="true"></i>
                </label>
            </div>
            <div class="radio radio-inline">
                <label>
                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                    <i class="fa fa-venus fa-2x" aria-hidden="true"></i>
                </label>
            </div>
        </div>
    </div>
    {{> text_area_input id='notes' description='Notes'}}
    <div class="form-group">
        <div class="col-md-3 col-md-offset-9">
            <button type="button" class="btn btn-default">Reset</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</fieldset>
