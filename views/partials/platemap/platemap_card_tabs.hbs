<div class="card" id="image_{{id}}">
    <div class="card-header">
        Drug: {{name}}
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                {{> platemap/platemap_card_tab drug_stain=drug.cyto stain="Cyto" wave_2_label="Golgi" wave_3_label="Actin" wave_4_label="PHH3"}}

            </div>
            <div class="col-md-6">
                {{> platemap/platemap_card_tab drug_stain=drug.edu stain="EdU" wave_2_label="Tubulin" wave_3_label="EdU" wave_4_label="Mitochondria"}}

            </div>
        </div>
    </div>

    <button class="btn btn-primary metadata_button" type="button" data-toggle="collapse"
        data-target="#multiCollapse_{{id}}" aria-expanded="false" aria-controls="multiCollapse_{{id}}">Metadata</button>


    <div class="collapse multi-collapse" id="multiCollapse_{{id}}">

        <table class="table table-striped table-bordered table-sm table-responsive" cellspacing="0" width="100%">
            <tbody>
                {{#each molecule_meta_data as |molecule|}}
                <tr>
                    <td><strong>{{molecule.name}}</strong></td>

                    {{#eq class_name "smiles"}}
                    <td class="{{molecule.class_name}}" value="{{molecule.value}}">
                        <canvas id="smiles_canvas_{{../id}}" width="125" height="250"></canvas>
                        </br>
                        {{{value}}}
                    </td>
                    {{else}}
                    <td class="{{molecule.class_name}}">
                        {{{molecule.value}}}
                    </td>
                    {{/eq}}
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>

    <button type="button" class="close-btn btn btn-secondary float-sm-right" data-effect="fadeOut">Close</button>
</div>