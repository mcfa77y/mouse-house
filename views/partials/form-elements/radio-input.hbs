<div class="form-group">
    <label class="col-md-1 control-label">{{description}}</label>
    <div class="col-md-2">
        {{#forEach items}}
        <div class="radio radio-primary">
            <label>
                {{#if isFirst}}
                <input type="radio" id="{{../id}}_{{this.description}}"  checked="" name="{{../id}}" value="{{this.id}}">
                {{else}}
                <input type="radio" id="{{../id}}_{{this.description}}" name="{{../id}}" value="{{this.id}}">
                {{/if}}
                {{this.description}}
            </label>
        </div>
        {{/forEach}}
    </div>
</div>
