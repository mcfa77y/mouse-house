<div class="card" id="image_{{id}}" style="width: 18em">
    <img class="card-img-top" src="{{image_uri}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <tbody>
                 {{#each row_zip}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{{value}}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <button type="button" class="close-btn btn btn-primary" data-effect="fadeOut">Close</button>
    </div>
</div>