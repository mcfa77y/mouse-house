<div class="card" id="image_{{id}}" style="width: 34em">
    <img class="card-img-top" src="{{image_uri}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>

        <button 
            class="btn btn-primary" 
            type="button" 
            data-toggle="collapse" 
            data-target="#multiCollapse_{{id}}" 
            aria-expanded="false" 
            aria-controls="multiCollapse_{{id}}">Metadata</button>

        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="multiCollapse_{{id}}">
                    <div class="card card-body">
                        <table class="table table-striped table-bordered table-sm table-responsive" cellspacing="0" width="100%">
                            <tbody>
                                {{#each row_zip}}
                                <tr>
                                    <td><strong>{{name}}</strong></td>
                                    <td>{{{value}}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <button type="button" class="close-btn btn btn-secondary float-sm-right" data-effect="fadeOut">Close</button>
    </div>
</div>