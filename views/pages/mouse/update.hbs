<div class="well bs-component">
<div class="page-header">
    <h4>Update mouse</h4>
    {{mouse}}
</div>
<div>
    <fieldset id="mouse-fields">
        {{> form_elements/text_input id='id_alias' description='ID' placeholder='1234' value=mouse.id_alias }}
        {{> form_elements/text_input id='ear_tag' description='Ear tag' placeholder='1234' value=mouse.ear_tag}}
        {{> form_elements/select_input status id='status_id' description='Status' value=mouse.status_id}}
        {{> form_elements/select_input cages id='cage_id' description='Cage'}}
        {{> form_elements/select_input genotype id='genotype_id' description="Genotype"}}
        {{> form_elements/date_input id='dob' description='D.O.B.' value=mouse.dob}}
        {{> form_elements/radio_input sex id='sex_id' description='Sex'}}

        {{> form_elements/text_area_input id='notes' description='Notes' value=mouse.notes}}
    </fieldset>
</div>
<div>
    <button type="button" class="btn btn-default">Back</button>
    <button id="save-mouse-button" type="button" class="btn btn-primary">Save</button>
</div>

</div>
