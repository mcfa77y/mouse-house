<div class="well bs-component">
    <div class="page-header">
        <h2>Update Breed</h2> {{mouse}}
    </div>

    <div >
        <fieldset>
            <div class="row">
            {{> form_elements/text_input id='id_alias' description='ID' placeholder='1234' value=breed.id_alias}}
            {{> form_elements/select_input genotype id='genotype_id' description='Genotype' value=breed.genotype}}
            {{> form_elements/select_input male_mice id='male_mouse' description='Male' value=breed.male_mouse}}
            {{> form_elements/select_input female_mice id='female_mouse' description='Female' value=breed.female_mouse}}

            {{> form_elements/date_input id='pairing-date' description='Pairing' value=breed.pairing_date}}
            {{> form_elements/date_input id='plug-date' description='Plug' value=breed.plug_date}}
            {{> form_elements/date_input id='pup-check-date' description='Pup check' value=breed.pup_check_date}}

            </div>
            {{> form_elements/text_area_input id='note' description='Note' value=breed.note}}
            <div class="col-md-12">
            <button data-toggle="collapse" data-target="#demo" type="button" class="btn btn-default">
                Add offspring</button>
                </div>
            <div id="demo" class="collapse">
                <div class="row">
                {{> form_elements/date_input id='pup-check-date' description='Pup check'}}
                {{> form_elements/date_input id='litter-date-of-birth' description='Litter D.O.B.'}}
                {{> form_elements/date_input id='ween-date' description='Ween'}}
                {{> form_elements/text_input id='male-count' description='Male count' placeholder='3'}}
                {{> form_elements/text_input id='female-count' description='Female count' placeholder='3'}}
                </div>
                {{> form_elements/text_area_input id='note2' description='Note'}}
            </div>
        </fieldset>
    </div>
    <div class="row">
        <button id="save-breed-button" type="button" class="btn btn-primary pull-right">Save</button>
        <button id="back-breed-button" type="button" class="btn btn-default pull-right">Back</button>
    </div>
</div>
   
