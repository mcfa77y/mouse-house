<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add cage</h4>
        <fieldset id="cage-fields">
            <div class="row">
                {{> form_elements/text_input id='id_alias' description='ID' placeholder='1234'}}
                {{> form_elements/select_input cage_type id='type_id' description='Type'}}
                {{> form_elements/date_input id='end_date' description='End date'}}
            </div>

            <div class="row">
                {{> form_elements/select_input mice_select id='mouse_ids' isMultiple=true description='Mice'}}
                <div class='col-md-3 col-sm-6 d-flex align-items-center'>
                    <button id='show-mouse-table-button' data-toggle='collapse' data-target='#mouse-table' type='button' class='btn btn-default'>Add mice</button>
                </div>
            </div>
            <div class='row d-flex flex-column'>
                <div id='mouse-table' class='collapse'>
                    {{> mouse/mouse_table}}
                </div>
            </div>
            <div class="row">
                {{> form_elements/text_area_input id='note' description='Note'}}
            </div>
        </fieldset>
        
        <div class="row">
            <button id="save-cage-button" type="button" class="btn btn-primary float-right">Save</button>
            <button id="back-cage-button" type="button" class="btn btn-default float-right">Back</button>
        </div>
    </div>
</div>